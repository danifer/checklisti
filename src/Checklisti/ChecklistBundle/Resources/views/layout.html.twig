{% extends "::base.html.twig" %}

{% block stylesheets %}
  <link rel="stylesheet" href="{{ asset('/css/bootstrap.min.css') }}" />
    <style>
        body {
            padding-top: 60px;
            padding-bottom: 40px;
        }
    </style>

    <link href='http://fonts.googleapis.com/css?family=Economica:400,400italic,700italic,700|Titillium+Web:400,200,200italic,300,300italic,400italic,600,600italic,700italic,700,900' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="{{ asset('/css/bootstrap-responsive.min.css') }}" />
    <link rel="stylesheet" href="{{ asset('/css/main.css') }}" />
{% endblock %}

{% block javascripts_head %}
    <script src="{{ asset('/js/vendor/modernizr-2.6.2-respond-1.1.0.min.js') }}"></script>
    <script src="{{ asset('https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js') }}"></script>
    <script src="{{ asset('/js/bootstrap-tooltip.js') }}"></script>
    <script src="{{ asset('/js/bootstrap-popover.js') }}"></script>

    <script>  
        $(document).ready(function () {
        $('#design-tip').tooltip({"placement" : "top"});
        });
    </script> 

    <script>  
        $(document).ready(function () {
        $('#design-tips').tooltip({"placement" : "top"});
        });
    </script> 

    <script>  
        $(document).ready(function () {
        $("#bib").popover({"placement" : "bottom"});
        });
    </script> 

    <script>
        function printpage()
        {
        window.print()
        }
    </script>
{% endblock %}

{% block body %}
    <!--[if lt IE 7]>
        <p class="chromeframe">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> or <a href="http://www.google.com/chromeframe/?redirect=true">activate Google Chrome Frame</a> to improve your experience.</p>
    <![endif]-->

    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
                <a class="brand" href="{{ path('_home') }}">{{domain}}</a>
                <div class="nav-collapse collapse">
                    <ul class="nav" id="top-nav"></ul>
                    <form class="navbar-form pull-right"></form>
                </div><!--/.nav-collapse -->
            </div><!--end of container -->
        </div><!--end of .navbar-inner -->
    </div><!--end of navbar navbar-inverse navbar-fixed-top -->

    <div class="container">
        <div class="row">
            <div class="span12">
                {% for flashMessage in app.session.flashbag.get('notice') %}
                    <div class="flash-message">
                        <em>Notice</em>: {{ flashMessage }}
                    </div>
                {% endfor %}
            </div> <!-- end span12 -->
        </div><!-- end row -->
    </div><!-- end container -->
    {% block content %}
        <div class="container">
            <div class="row">
                <div class="span8">
                    {% block main %}
                        <div class="main">
                            <div class="row">
                                <div class="span6 col-centered">
                                    <h2 id="content">CONTENT</h2>
                                    <fieldset>
                                        <label class="checkbox"><input type="checkbox" id="Checkbox69" value="option69"><strong>Contrast. </strong>There is adequate contrast between the text and background. Check with e.g. <a href="http://www.checkmycolours.com/">www.checkmycolours.com</a></label>
                                        <label class="checkbox"><input type="checkbox" id="Checkbox71" value="option72"><strong>Content is scannable.</strong> There are short paragraphs, descriptive headings, lists and images. Visual content is used when appropriate, instead of large amounts of text.</label>
                                        <label class="checkbox"><input type="checkbox" id="Checkbox73" value="option73"><strong>Content is written with common language</strong> that users easily understand. Check with e.g.: <a href="http://www.read-able.com/">www.read-able.com/</a></label>
                                        <label class="checkbox"><input type="checkbox" id="Checkbox74" value="option74"><strong>Contact and company information is clearly displayed.</strong> Clicking the contact link <a href="http://www.problogger.net/archives/2008/12/06/10-reasons-to-avoid-mailto-links/">doesn't automatically open</a> a mail application.</label>
                                        <label class="checkbox"><input type="checkbox" id="Checkbox76" value="option76"><strong>Content is useful and up-to-date</strong>, providing answers to the most common questions asked by users. There are no long instructions or "welcome to our website" text.</label>
                                        <label class="checkbox"><input type="checkbox" id="Checkbox82" value="option82"><strong>Use of uppercase letters in prose text is avoided.</strong> Uppercase is used only for formatting.</label>
                                    </fieldset>
                                </div><!--end of span6-->
                            </div> <!-- end of row -->
                        </div>  
                    {% endblock %}

                </div> <!-- end span12 -->
            </div><!-- end row -->
        </div><!-- end container -->
    {% endblock %}

    <p class="onlyprint">Copyright &copy; {{ sitename }} {{ "now"|date("Y") }}</p>
    <div class="container">
        <div class="row">
            <div class="span6" id="buttons">
                <a id="bibliography" data-toggle="collapse" data-target="#demo">Bibliography</a>
                <div id="demo" class="collapse">
                    <p>
                        <a href="http://guidelines.usability.gov/">U.S. Dept. of Health and Human Services. The Research-Based Web Design & Usability Guidelines, 2006.</a>
                        <br><br>
                        <a href="http://www.nngroup.com/articles">Nielsen Norman Group, Articles</a>
                        <br><br>
                        <a href="http://www.w3.org/TR/WAI-WEBCONTENT/full-checklist">Checklist of Checkpoints for Web Content Accessibility Guidelines 1.0</a>
                        <br><br>
                        <a href="http://repository.jisc.ac.uk/79/1/jisc-hcidesign-study-final.pdf">The Joint Information Systems Committee, HCI Design Foundation Study, 2004</a>
                    </p>
                </div>
            </div>

            <div class="span6" id="buttons2">
                <button id="reload" class="btn btn-info" title="Reset all the checkboxes" onclick="window.location.reload(true)"><i class="icon-repeat icon-white"></i> Reload</button>
                <button id="printbutton" class="btn btn-info" onclick="printpage()"><i class="icon-print icon-white"></i> Print</button>
            </div>
        </div>
        <!-- Icons are from http://glyphicons.com/ "Glyphicons Halflings are normally not available for free, but an arrangement between Bootstrap and the Glyphicons creators have made this possible at no cost to developers." -->
        <hr>

        <div class="row">
            <div class="span12" id="">
                <h3 class="sendfeedback"> 
                </h3>
            </div> <!--end of .span12 #-->
        </div><!--end of row -->

        <hr>

        <footer>
            <div class="block">

                <p>
                    <i class="icon-map-marker"></i> Dallas, Texas &nbsp; &nbsp; &nbsp;<i class="icon-envelope"></i> {{contact_email}}
                    <a class="disclaimer" rel="tooltip" id="design-tip" title="You are responsible for your use of this service, for any content you post, and for any consequences thereof.">Disclaimer</a> 

                </p>
                <p class="onlyprint">
                    You are responsible for your use of this service, for any content you post, and for any consequences thereof.
                </p>
                <p id="copy">Copyright &copy; {{ sitename }} {{ "now"|date("Y") }}</p>
            </div><!--end of block-->
        </footer>
    </div> <!-- /container -->

{% endblock %}

{% block javascripts_end %}
    <script src="{{ asset('https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js') }}"></script>
    <script>window.jQuery || document.write('<script src="{{ asset('/js/vendor/jquery-1.8.3.min.js') }}"><\/script>')</script>
    <script src="{{ asset('/js/vendor/bootstrap.min.js') }}"></script>
    <script src="{{ asset('/js/plugins.js') }}"></script>
    <script src="{{ asset('/js/main.js') }}"></script>
    
    <script>
         $('#top-nav').onePageNav({
             currentClass: 'active',
             changeHash: true,
             scrollSpeed: 1200
        });
    </script>

    <script>
        $('[type="checkbox"]').click(function(){
            var element = $(this).parent();
            if ($(this).is(':checked')) {
             element.wrap('<del>');
            } else {
            element.unwrap('<del>');
            }
        });
    </script>
{% endblock %}
